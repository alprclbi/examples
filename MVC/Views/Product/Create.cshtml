@using MVC.Models.ViewModels

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
	<h1>Ürün Ekle</h1>
</div>

@model Product

<form method="post">
	<div class="container text-center">
		<div class="row">
			<div class="col-8">
				<div class="row g-3 align-items-center">
					<div class="mb-3">
						<label for="exampleInputPassword1" class="visually-hidden">Ürün Adı</label>
						<input asp-for="Name" class="form-control" placeholder="Ürün Adı">
					</div>
				</div>
			</div>
			<div class="col-4">
				<button type="submit" class="btn btn-dark">Ürünü Kaydet</button>
			</div>
		</div>
	</div>
</form>